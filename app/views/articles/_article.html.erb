<div id="<%= dom_id article %>">
  <p>
    <strong>Content:</strong>
    <%= article.content %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= article.title %>
  </p>

  <% if article.photo.attached? %>
    <p>
      <strong>Image:</strong>
      <%= cl_image_tag article.photo.key, width: 200 %>
    </p>
    <div class="card-category"
    style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path article.photo.key, height: 300, crop: :fill %>')"
    >
          Cool article
        </div>
    </div>
  <% end %>


<% article.photos.each do |photo| %>
  <%= cl_image_tag photo.key, width: 200 %>
<% end %>
